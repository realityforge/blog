---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>{{ site.blog.title }}</title>
 <link href="{{ site.blog.url }}/atom.xml" rel="self"/>
 <link href="{{ site.blog.url }}/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>{{ site.blog.url }}</id>
 <author>
   <name>{{ site.blog.author }}</name>
   <email>{{ site.blog.email }}</email>
 </author>

 {% for post in site.posts %}
 {% if post.layout == 'post' %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="{{ site.blog.url }}{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.blog.url }}{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endif %}
 {% endfor %}
 
</feed>